# Supabase Configuration
# Get these values from your Supabase project settings
# https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=your-project-url
VITE_SUPABASE_ANON_KEY=your-anon-key

# Example:
# VITE_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
# VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# OpenAI API Configuration
# Used by the AI Success Manager feature via Supabase Edge Function
# Get your API key from https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your-openai-api-key

# ============================================================================
# Stripe Configuration
# ============================================================================
# Get these values from your Stripe Dashboard: https://dashboard.stripe.com

# Public key (safe for client-side)
# Found in: Developers > API keys > Publishable key
VITE_STRIPE_PUBLIC_KEY=pk_test_your_publishable_key

# Secret key (server-side only - DO NOT expose to client)
# Found in: Developers > API keys > Secret key
# Note: This should only be used in server-side code/edge functions
STRIPE_SECRET_KEY=sk_test_your_secret_key

# Webhook signing secret (server-side only)
# Found in: Developers > Webhooks > Your endpoint > Signing secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product/Price IDs (created in Stripe Dashboard or via API)
# Activation fee - one-time payment (€2.90)
STRIPE_ACTIVATION_PRICE_ID=price_activation_290_eur

# Pro plan - monthly subscription (€30)
STRIPE_PRO_PRICE_ID=price_pro_3000_eur_monthly

# Scale plan - monthly subscription (€99)
STRIPE_SCALE_PRICE_ID=price_scale_9900_eur_monthly

# Application URL for redirects
VITE_APP_URL=http://localhost:5173
